@model IEnumerable<NominaMVC.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

&nbsp;
<h2 class="text-center">Personas</h2>

<p>
    <a asp-action="Create" class="btn btn-success text-center">Crear Persona</a>
</p>
<table class="table"  table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.IdPersona)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.IdPersona)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.IdPersona">Edit</a> |
                <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.IdPersona">Details</a> |
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.IdPersona">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
