
@model Persona
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Login.css" />
   

    </head>
    <body>
       <div class="wrapper fadeInDown">
          <div id="formContent">
            <!-- Tabs Titles -->
            &nbsp;
            <h2 class="active"> Sign In </h2>
    

            <!-- Icon -->
            <div class="fadeIn first">
              <img src="~/uuser.ico" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->        

            <form asp-controller="Acceso" asp-action="Index" method="post">
             
              <input type="text" id="login" class="form-control"  placeholder="ID PERSONA" asp-for="IdPersona">
          
              <input type="text" id="password" class="form-control"  placeholder="CONTRASEÑA" asp-for="Contrasena">

              <input type="submit" class="fadeIn fourth" value="Ingresar">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
               <h2 class="active"> NominaMVC </h2>
            </div>

          </div>
        </div>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>


